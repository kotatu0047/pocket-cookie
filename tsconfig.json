{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2017",
      "dom.iterable",
      "esnext"
    ],
    "outDir": "./dist",
    "allowJs": false,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ]
}
